{
  "name": "platform-api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "API service for the paybill platform",
  "keywords": [
    "paybill-api",
    "paybill"
  ],
  "license": "Apache-2.0",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "docker:push": " docker push $IMAGE_REPO_NAME/$npm_package_name:$npm_package_version",
    "docker:build:dev": "DOCKER_BUILDKIT=1 sudo docker build --build-arg NR_ENABLED=$NR_ENABLED_VALUE --build-arg FROM_FOLDER=services --build-arg SERVICE_NAME=api-service -t $IMAGE_REPO_NAME/$npm_package_name:$npm_package_version . -f ./Dockerfile",
    "docker:push:dev": " docker push $IMAGE_REPO_NAME/$npm_package_name:$npm_package_version",
    "docker:build:lambda": "DOCKER_BUILDKIT=1 sudo docker build -f Dockerfile.lambda --build-arg NR_ENABLED=$NR_ENABLED_VALUE -t $IMAGE_REPO_NAME/$npm_package_name:$npm_package_version-lambda .",
    "docker:push:lambda": "sudo docker push $IMAGE_REPO_NAME/$npm_package_name:$npm_package_version-lambda",
    "docker:run:lambda": "docker run -p 3000:3000 -d  $IMAGE_REPO_NAME/$npm_package_name:$npm_package_version-lambda",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@fastify/aws-lambda": "^6.3.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "aws-lambda": "^1.0.7",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "dotenv-extended": "^2.9.0",
    "fastify": "^5.1.0",
    "validator": "^13.12.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.13.14",
    "@vitest/coverage-v8": "^3.0.9",
    "c8": "^10.1.3",
    "eslint": "^9.35.0",
    "fastify-tsconfig": "^3.0.0",
    "neostandard": "^0.12.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
